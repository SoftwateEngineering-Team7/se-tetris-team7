<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" 
    prefHeight="400.0" prefWidth="600.0" 
    style="-fx-background-color: #1a1a2e;"
    stylesheets="@scoreboard.css"
    xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <!-- Score Table Section -->
      <VBox layoutX="20.0" layoutY="20.0" prefHeight="360.0" prefWidth="420.0" spacing="10"
          style="-fx-background-color: #16213e; -fx-background-radius: 10; -fx-padding: 15;">
         <children>
            <Label text="HIGH SCORES" textFill="#e94560" alignment="CENTER" prefWidth="390.0">
               <font>
                  <Font name="Arial Black" size="24.0" />
               </font>
               <effect>
                  <DropShadow height="10.0" radius="4.5" width="10.0">
                     <color>
                        <Color red="0.91" green="0.27" blue="0.38" opacity="0.6" />
                     </color>
                  </DropShadow>
               </effect>
            </Label>
            <TableView fx:id="scoreTable" fixedCellSize="35.0" prefHeight="310.0" prefWidth="390.0"
                style="-fx-background-color: #0f3460; -fx-border-color: #533483; -fx-border-width: 2; -fx-border-radius: 5;">
              <columns>
                <TableColumn id="nameColumn" fx:id="nameColumn" prefWidth="140.0" text="Name" 
                    style="-fx-alignment: CENTER;" />
                <TableColumn id="scoreColumn" fx:id="scoreColumn" prefWidth="150.0" text="Score" 
                    style="-fx-alignment: CENTER;" />
                <TableColumn id="difficultyColumn" fx:id="difficultyColumn" prefWidth="100.0" text="Difficulty" 
                    style="-fx-alignment: CENTER;" />
              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
         </children>
         <effect>
            <DropShadow height="15.0" radius="7.0" width="15.0">
               <color>
                  <Color opacity="0.4" />
               </color>
            </DropShadow>
         </effect>
      </VBox>
      
      <!-- Input Section -->
      <VBox fx:id="inputPane" layoutX="460.0" layoutY="20.0" prefHeight="360.0" prefWidth="120.0" 
          spacing="15" alignment="CENTER"
          style="-fx-background-color: #16213e; -fx-background-radius: 10; -fx-padding: 15;">
         <children>
            <Label text="YOUR SCORE" textFill="#e94560" alignment="CENTER" wrapText="true" prefWidth="90.0">
               <font>
                  <Font name="Arial Black" size="14.0" />
               </font>
            </Label>
            <Text fx:id="scoreText" fill="white" strokeType="OUTSIDE" strokeWidth="0.0" 
                text="999999999" wrappingWidth="90.0" textAlignment="CENTER">
               <font>
                  <Font name="Consolas Bold" size="20.0" />
               </font>
            </Text>
            <VBox spacing="8" alignment="CENTER">
               <children>
                  <Label text="NAME" textFill="#e94560">
                     <font>
                        <Font name="Arial Black" size="12.0" />
                     </font>
                  </Label>
                  <TextField fx:id="nameField" prefHeight="30.0" prefWidth="90.0" promptText="Name"
                      style="-fx-background-color: #0f3460; -fx-text-fill: white; -fx-prompt-text-fill: #888; -fx-border-color: #533483; -fx-border-radius: 5; -fx-background-radius: 5;">
                     <font>
                        <Font name="Consolas" size="13.0" />
                     </font>
                  </TextField>
               </children>
            </VBox>
            <Button fx:id="submitButton" mnemonicParsing="false" onAction="#onSubmitPressed" 
                text="SUBMIT" prefWidth="90.0" prefHeight="35.0"
                style="-fx-background-color: #533483; -fx-text-fill: white; -fx-background-radius: 5;">
               <font>
                  <Font name="Arial Bold" size="13.0" />
               </font>
               <effect>
                  <DropShadow height="8.0" radius="3.5" width="8.0">
                     <color>
                        <Color opacity="0.5" />
                     </color>
                  </DropShadow>
               </effect>
            </Button>
         </children>
         <effect>
            <DropShadow height="15.0" radius="7.0" width="15.0">
               <color>
                  <Color opacity="0.4" />
               </color>
            </DropShadow>
         </effect>
      </VBox>
   </children>
</AnchorPane>
