<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.text.Font?>

<StackPane fx:id="root" xmlns="http://javafx.com/javafx"
    xmlns:fx="http://javafx.com/fxml"
    prefWidth="800" prefHeight="600"
    stylesheets="@../css/startmenu.css"
    style="-fx-background-color: black;">

    <BorderPane>

        <!-- ============== 타이틀 ============== -->
        <top>
            <Label fx:id="titleLabel" text="TETRIS" BorderPane.alignment="CENTER"
                styleClass="title">
                <font>
                    <Font name="Arial Black" size="100.0" />
                </font>
                <effect>
                    <DropShadow height="20.0" radius="9.5" width="20.0">
                        <color>
                            <Color opacity="0.75" />
                        </color>
                    </DropShadow>
                </effect>
                <BorderPane.margin>
                    <Insets top="20.0" />
                </BorderPane.margin>
            </Label>
        </top>

        <!-- ============== 메뉴 버튼들 ============== -->
        <center>
            <VBox fx:id="menuBox" alignment="CENTER" spacing="30">
                <!-- 버튼은 컨트롤러에서 동적 생성 -->
            </VBox>
        </center>

        <!-- ============== 안내 문구 (오류/잘못된 인풋) ============== -->
        <bottom>
            <HBox alignment="CENTER_RIGHT" spacing="8" BorderPane.alignment="CENTER_RIGHT">
                <children>
                    <Region HBox.hgrow="ALWAYS" />
                    <Label fx:id="wrongInputLabel" text="올바르지 않은 인풋입니다"
                        visible="false" styleClass="label-error">
                        <font>
                            <Font name="Arial" size="16.0" />
                        </font>
                    </Label>
                </children>
                <BorderPane.margin>
                    <Insets bottom="24.0" right="24.0" />
                </BorderPane.margin>
            </HBox>
        </bottom>

        <!-- ============== 스코어보드 (왼쪽) ============== -->
        <left>
            <VBox fx:id="scoreboard"
                styleClass="scoreboard-container"
                alignment="TOP_CENTER" spacing="8"
                minWidth="180" prefWidth="240" maxWidth="360">
                <children>
                    <Label text="SCOREBOARD" styleClass="scoreboard-title" />
                    <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS"
                        vbarPolicy="AS_NEEDED" hbarPolicy="NEVER">
                        <content>
                            <!-- Top 10 행이 들어갈 컨테이너 -->
                            <VBox fx:id="scoreboardBox" alignment="CENTER" spacing="10" />
                        </content>
                    </ScrollPane>
                </children>
                <BorderPane.margin>
                    <Insets left="24.0" />
                </BorderPane.margin>
            </VBox>
        </left>

    </BorderPane>
</StackPane>