<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="root" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
    styleClass="root" stylesheets="@/css/settingmenu.css"
    prefWidth="800" prefHeight="600">
    
    <center>
        <VBox fx:id="mainVBox" alignment="CENTER" spacing="20" />
    </center>
    
    <bottom>
        <HBox fx:id="buttonBox" alignment="CENTER">
            <Button fx:id="btnBackToStart" text="시작 메뉴" styleClass="button"/>
            <Button fx:id="btnReset" text="설정 초기화" styleClass="button"/>
            <Button fx:id="btnSave" text="저장" styleClass="button"/>
        </HBox>
    </bottom>
</BorderPane>
