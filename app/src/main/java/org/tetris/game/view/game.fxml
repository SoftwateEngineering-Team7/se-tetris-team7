<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="root" xmlns="http://javafx.com/javafx"
    xmlns:fx="http://javafx.com/fxml"
    prefWidth="800" prefHeight="600"
    style="-fx-background-color: #1a1a2e;">

    <!-- ============== 게임 보드 (중앙) ============== -->
    <center>
        <Pane fx:id="gameBoard" 
            prefWidth="300" prefHeight="600"
            style="-fx-background-color: #16213e; -fx-border-color: #0f3460; -fx-border-width: 3;">
            <BorderPane.margin>
                <Insets top="20.0" bottom="20.0" />
            </BorderPane.margin>
        </Pane>
    </center>

    <!-- ============== 게임 정보 (오른쪽) ============== -->
    <right>
        <VBox alignment="TOP_CENTER" spacing="30" 
            prefWidth="250" 
            style="-fx-background-color: #16213e;">
            <children>
                <!-- 다음 블록 프리뷰 -->
                <VBox alignment="CENTER" spacing="10">
                    <children>
                        <Label text="NEXT" textFill="#e94560">
                            <font>
                                <Font name="Arial Black" size="24.0" />
                            </font>
                        </Label>
                        <Pane fx:id="nextBlockPane" 
                            prefWidth="120" prefHeight="120"
                            style="-fx-background-color: #0f3460; -fx-border-color: #533483; -fx-border-width: 2;">
                            <effect>
                                <DropShadow height="10.0" radius="4.5" width="10.0">
                                    <color>
                                        <Color opacity="0.5" />
                                    </color>
                                </DropShadow>
                            </effect>
                        </Pane>
                    </children>
                </VBox>

                <!-- 점수 -->
                <VBox alignment="CENTER" spacing="5">
                    <children>
                        <Label text="SCORE" textFill="#e94560">
                            <font>
                                <Font name="Arial Black" size="20.0" />
                            </font>
                        </Label>
                        <Label fx:id="scoreLabel" text="0" textFill="white">
                            <font>
                                <Font name="Consolas Bold" size="28.0" />
                            </font>
                        </Label>
                    </children>
                </VBox>

                <!-- 레벨 -->
                <VBox alignment="CENTER" spacing="5">
                    <children>
                        <Label text="LEVEL" textFill="#e94560">
                            <font>
                                <Font name="Arial Black" size="20.0" />
                            </font>
                        </Label>
                        <Label fx:id="levelLabel" text="1" textFill="white">
                            <font>
                                <Font name="Consolas Bold" size="28.0" />
                            </font>
                        </Label>
                    </children>
                </VBox>

                <!-- 라인 -->
                <VBox alignment="CENTER" spacing="5">
                    <children>
                        <Label text="LINES" textFill="#e94560">
                            <font>
                                <Font name="Arial Black" size="20.0" />
                            </font>
                        </Label>
                        <Label fx:id="linesLabel" text="0" textFill="white">
                            <font>
                                <Font name="Consolas Bold" size="28.0" />
                            </font>
                        </Label>
                    </children>
                </VBox>

                <!-- 일시정지 버튼 -->
                <Button fx:id="pauseButton" text="PAUSE" 
                    prefWidth="150" prefHeight="40"
                    style="-fx-background-color: #533483; -fx-text-fill: white; -fx-background-radius: 5;">
                    <font>
                        <Font name="Arial Bold" size="16.0" />
                    </font>
                    <effect>
                        <DropShadow height="8.0" radius="3.5" width="8.0">
                            <color>
                                <Color opacity="0.5" />
                            </color>
                        </DropShadow>
                    </effect>
                </Button>
            </children>
            <BorderPane.margin>
                <Insets top="20.0" right="20.0" bottom="20.0" left="20.0" />
            </BorderPane.margin>
        </VBox>
    </right>

    <!-- ============== 홀드 블록 (왼쪽) ============== -->
    <left>
        <VBox alignment="TOP_CENTER" spacing="30" 
            prefWidth="200" 
            style="-fx-background-color: #16213e;">
            <children>
                <VBox alignment="CENTER" spacing="10">
                    <children>
                        <Label text="HOLD" textFill="#e94560">
                            <font>
                                <Font name="Arial Black" size="24.0" />
                            </font>
                        </Label>
                        <Pane fx:id="holdBlockPane" 
                            prefWidth="120" prefHeight="120"
                            style="-fx-background-color: #0f3460; -fx-border-color: #533483; -fx-border-width: 2;">
                            <effect>
                                <DropShadow height="10.0" radius="4.5" width="10.0">
                                    <color>
                                        <Color opacity="0.5" />
                                    </color>
                                </DropShadow>
                            </effect>
                        </Pane>
                    </children>
                </VBox>

                <!-- 조작 안내 -->
                <VBox alignment="CENTER_LEFT" spacing="8" 
                    style="-fx-background-color: #0f3460; -fx-padding: 15; -fx-background-radius: 5;">
                    <children>
                        <Label text="CONTROLS" textFill="#e94560">
                            <font>
                                <Font name="Arial Black" size="14.0" />
                            </font>
                        </Label>
                        <Label text="← →  Move" textFill="white">
                            <font>
                                <Font name="Consolas" size="12.0" />
                            </font>
                        </Label>
                        <Label text="↑     Rotate" textFill="white">
                            <font>
                                <Font name="Consolas" size="12.0" />
                            </font>
                        </Label>
                        <Label text="↓     Soft Drop" textFill="white">
                            <font>
                                <Font name="Consolas" size="12.0" />
                            </font>
                        </Label>
                        <Label text="Space Hard Drop" textFill="white">
                            <font>
                                <Font name="Consolas" size="12.0" />
                            </font>
                        </Label>
                        <Label text="C     Hold" textFill="white">
                            <font>
                                <Font name="Consolas" size="12.0" />
                            </font>
                        </Label>
                        <Label text="P     Pause" textFill="white">
                            <font>
                                <Font name="Consolas" size="12.0" />
                            </font>
                        </Label>
                    </children>
                </VBox>
            </children>
            <BorderPane.margin>
                <Insets top="20.0" left="20.0" bottom="20.0" right="20.0" />
            </BorderPane.margin>
        </VBox>
    </left>


</BorderPane>

<!-- ============== 게임 오버 오버레이 ============== -->
<HBox fx:id="gameOverOverlay" alignment="CENTER" 
    visible="false" managed="false"
    prefWidth="800" prefHeight="600"
    style="-fx-background-color: rgba(0, 0, 0, 0.8);">
    <children>
        <VBox alignment="CENTER" spacing="20">
            <children>
                <Label text="GAME OVER" textFill="#e94560">
                    <font>
                        <Font name="Arial Black" size="48.0" />
                    </font>
                    <effect>
                        <DropShadow height="15.0" radius="7.0" width="15.0">
                            <color>
                                <Color red="0.91" green="0.27" blue="0.38" opacity="0.8" />
                            </color>
                        </DropShadow>
                    </effect>
                </Label>
                <Button fx:id="restartButton" text="RESTART" 
                    prefWidth="150" prefHeight="40"
                    style="-fx-background-color: #e94560; -fx-text-fill: white; -fx-background-radius: 5;">
                    <font>
                        <Font name="Arial Bold" size="16.0" />
                    </font>
                </Button>
                <Button fx:id="menuButton" text="MENU" 
                    prefWidth="150" prefHeight="40"
                    style="-fx-background-color: #533483; -fx-text-fill: white; -fx-background-radius: 5;">
                    <font>
                        <Font name="Arial Bold" size="16.0" />
                    </font>
                </Button>
            </children>
        </VBox>
    </children>
</HBox>

<!-- ============== 일시정지 오버레이 ============== -->
<HBox fx:id="pauseOverlay" alignment="CENTER" 
    visible="false" managed="false"
    prefWidth="800" prefHeight="600"
    style="-fx-background-color: rgba(0, 0, 0, 0.7);">
    <children>
        <VBox alignment="CENTER" spacing="20">
            <children>
                <Label text="PAUSED" textFill="#533483">
                    <font>
                        <Font name="Arial Black" size="48.0" />
                    </font>
                    <effect>
                        <DropShadow height="15.0" radius="7.0" width="15.0">
                            <color>
                                <Color red="0.33" green="0.20" blue="0.51" opacity="0.8" />
                            </color>
                        </DropShadow>
                    </effect>
                </Label>
                <Button fx:id="resumeButton" text="RESUME" 
                    prefWidth="150" prefHeight="40"
                    style="-fx-background-color: #533483; -fx-text-fill: white; -fx-background-radius: 5;">
                    <font>
                        <Font name="Arial Bold" size="16.0" />
                    </font>
                    <effect>
                        <DropShadow height="8.0" radius="3.5" width="8.0">
                            <color>
                                <Color opacity="0.5" />
                            </color>
                        </DropShadow>
                    </effect>
                </Button>
                <Button fx:id="pauseMenuButton" text="MAIN MENU" 
                    prefWidth="150" prefHeight="40"
                    style="-fx-background-color: #e94560; -fx-text-fill: white; -fx-background-radius: 5;">
                    <font>
                        <Font name="Arial Bold" size="16.0" />
                    </font>
                    <effect>
                        <DropShadow height="8.0" radius="3.5" width="8.0">
                            <color>
                                <Color opacity="0.5" />
                            </color>
                        </DropShadow>
                    </effect>
                </Button>
            </children>
        </VBox>
    </children>
</HBox>

