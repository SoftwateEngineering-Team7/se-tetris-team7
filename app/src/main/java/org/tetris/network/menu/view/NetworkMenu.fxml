<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.text.Font?>

<StackPane xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1"
    prefWidth="800" prefHeight="600" 
    style="-fx-background-color: #1a1a2e;">
   
   <children>
      <!-- 메인 컨테이너 -->
      <VBox alignment="CENTER" spacing="25" maxWidth="400" maxHeight="550"
          style="-fx-background-color: #16213e; -fx-background-radius: 15; -fx-padding: 30;">
         <children>
            <!-- 제목 -->
            <Label text="NETWORK GAME" textFill="#e94560" alignment="CENTER">
               <font>
                  <Font name="Arial Black" size="28.0" />
               </font>
               <effect>
                  <DropShadow height="12.0" radius="5.5" width="12.0">
                     <color>
                        <Color red="0.91" green="0.27" blue="0.38" opacity="0.6" />
                     </color>
                  </DropShadow>
               </effect>
            </Label>
            
            <!-- Host/Client 선택 -->
            <VBox alignment="CENTER" spacing="12">
               <children>
                  <Label text="CONNECTION TYPE" textFill="#e94560">
                     <font>
                        <Font name="Arial Black" size="16.0" />
                     </font>
                  </Label>
                  <HBox alignment="CENTER" spacing="30">
                     <children>
                        <RadioButton fx:id="hostRadio" text="Host" textFill="white" selected="true">
                           <toggleGroup>
                              <ToggleGroup fx:id="connectionTypeGroup" />
                           </toggleGroup>
                           <font>
                              <Font name="Arial" size="14.0" />
                           </font>
                        </RadioButton>
                        <RadioButton fx:id="clientRadio" text="Client" textFill="white" 
                            toggleGroup="$connectionTypeGroup">
                           <font>
                              <Font name="Arial" size="14.0" />
                           </font>
                        </RadioButton>
                     </children>
                  </HBox>
               </children>
            </VBox>
            
            <!-- IP & Port 입력 -->
            <VBox alignment="CENTER" spacing="15">
               <children>
                  <HBox alignment="CENTER" spacing="15" prefWidth="340">
                     <children>
                        <VBox alignment="CENTER_LEFT" spacing="5" prefWidth="200">
                           <children>
                              <Label text="IP ADDRESS" textFill="#e94560">
                                 <font>
                                    <Font name="Arial Black" size="12.0" />
                                 </font>
                              </Label>
                              <TextField fx:id="ipField" prefHeight="35.0" promptText="192.168.1.100"
                                  style="-fx-background-color: #0f3460; -fx-text-fill: white; -fx-prompt-text-fill: #888; -fx-border-color: #533483; -fx-border-radius: 5; -fx-background-radius: 5; -fx-font-size: 13;">
                                 <font>
                                    <Font name="Consolas" size="13.0" />
                                 </font>
                              </TextField>
                           </children>
                        </VBox>
                        <VBox alignment="CENTER_LEFT" spacing="5" prefWidth="110">
                           <children>
                              <Label text="PORT" textFill="#e94560">
                                 <font>
                                    <Font name="Arial Black" size="12.0" />
                                 </font>
                              </Label>
                              <TextField fx:id="portField" prefHeight="35.0" promptText="54321"
                                  style="-fx-background-color: #0f3460; -fx-text-fill: white; -fx-prompt-text-fill: #888; -fx-border-color: #533483; -fx-border-radius: 5; -fx-background-radius: 5; -fx-font-size: 13;">
                                 <font>
                                    <Font name="Consolas" size="13.0" />
                                 </font>
                              </TextField>
                           </children>
                        </VBox>
                     </children>
                  </HBox>
               </children>
            </VBox>
            
            <!-- 게임 모드 선택 & Create 버튼 -->
            <HBox alignment="CENTER" spacing="20" prefWidth="340">
               <children>
                  <VBox alignment="CENTER_LEFT" spacing="5" prefWidth="200">
                     <children>
                        <Label text="GAME MODE" textFill="#e94560">
                           <font>
                              <Font name="Arial Black" size="12.0" />
                           </font>
                        </Label>
                        <ComboBox fx:id="gameModeCombo" prefHeight="35.0" prefWidth="200"
                            style="-fx-background-color: #0f3460; -fx-text-fill: white; -fx-border-color: #533483; -fx-border-radius: 5; -fx-background-radius: 5; -fx-prompt-text-fill: white;">
                           <effect>
                              <DropShadow height="5.0" radius="2.0" width="5.0">
                                 <color>
                                    <Color opacity="0.3" />
                                 </color>
                              </DropShadow>
                           </effect>
                        </ComboBox>
                     </children>
                  </VBox>
                  <VBox alignment="BOTTOM_CENTER" prefWidth="110">
                     <children>
                        <Button fx:id="createButton" text="CREATE" prefWidth="110" prefHeight="35.0"
                            onAction="#onCreatePressed"
                            style="-fx-background-color: #533483; -fx-text-fill: white; -fx-background-radius: 5;">
                           <font>
                              <Font name="Arial Bold" size="14.0" />
                           </font>
                           <effect>
                              <DropShadow height="8.0" radius="3.5" width="8.0">
                                 <color>
                                    <Color opacity="0.5" />
                                 </color>
                              </DropShadow>
                           </effect>
                        </Button>
                     </children>
                  </VBox>
               </children>
            </HBox>
            
            <!-- 로그 메시지 -->
            <VBox alignment="CENTER" spacing="8" prefWidth="340">
               <children>
                  <Label text="CONNECTION LOG" textFill="#e94560">
                     <font>
                        <Font name="Arial Black" size="14.0" />
                     </font>
                  </Label>
                  <ScrollPane prefHeight="120.0" prefWidth="340" fitToWidth="true"
                      style="-fx-background-color: #0f3460; -fx-border-color: #533483; -fx-border-width: 2; -fx-border-radius: 5; -fx-background-radius: 5;">
                     <content>
                        <TextArea fx:id="logArea" prefHeight="115.0" wrapText="true" editable="false"
                            style="-fx-background-color: white; -fx-text-fill: black; -fx-control-inner-background: white;">
                           <font>
                              <Font name="Consolas" size="11.0" />
                           </font>
                        </TextArea>
                     </content>
                  </ScrollPane>
               </children>
            </VBox>
            
            <!-- 하단 버튼들 -->
            <HBox alignment="CENTER" spacing="20">
               <children>
                  <Button fx:id="backButton" text="BACK" prefWidth="100" prefHeight="35.0"
                      onAction="#onBackPressed"
                      style="-fx-background-color: #e94560; -fx-text-fill: white; -fx-background-radius: 5;">
                     <font>
                        <Font name="Arial Bold" size="14.0" />
                     </font>
                     <effect>
                        <DropShadow height="8.0" radius="3.5" width="8.0">
                           <color>
                              <Color opacity="0.5" />
                           </color>
                        </DropShadow>
                     </effect>
                  </Button>
                  <Button fx:id="clearLogButton" text="CLEAR LOG" prefWidth="100" prefHeight="35.0"
                      onAction="#onClearLogPressed"
                      style="-fx-background-color: #533483; -fx-text-fill: white; -fx-background-radius: 5;">
                     <font>
                        <Font name="Arial Bold" size="12.0" />
                     </font>
                     <effect>
                        <DropShadow height="8.0" radius="3.5" width="8.0">
                           <color>
                              <Color opacity="0.5" />
                           </color>
                        </DropShadow>
                     </effect>
                  </Button>
               </children>
            </HBox>
         </children>
         <effect>
            <DropShadow height="20.0" radius="10.0" width="20.0">
               <color>
                  <Color opacity="0.5" />
               </color>
            </DropShadow>
         </effect>
      </VBox>
   </children>
</StackPane>