<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.text.Font?>

<StackPane xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1"
    prefWidth="920" prefHeight="620"
    style="-fx-background-color: linear-gradient(to bottom, #0f1c3f, #0b132b);">
   <children>
      <BorderPane maxWidth="880" maxHeight="560"
          style="-fx-background-color: rgba(21,32,64,0.85); -fx-background-radius: 18; -fx-padding: 26;">
         <center>
            <VBox alignment="CENTER" spacing="24">
               <children>
                  <Label text="P2P LOBBY" textFill="#e94560">
                     <font>
                        <Font name="Arial Black" size="30.0" />
                     </font>
                     <effect>
                        <DropShadow color="#ff5f7f88" radius="12.0" />
                     </effect>
                  </Label>

                  <HBox alignment="CENTER" spacing="18">
                     <children>
                        <VBox fx:id="opponentCard" alignment="CENTER" spacing="10" prefWidth="240" prefHeight="240"
                            style="-fx-background-color: rgba(255,255,255,0.06); -fx-border-color: #e94560; -fx-border-radius: 14; -fx-background-radius: 14; -fx-padding: 16;">
                           <children>
                              <Label text="상대" textFill="white">
                                 <font>
                                    <Font name="Arial Bold" size="18.0" />
                                 </font>
                              </Label>
                              <Label fx:id="opponentStatusLabel" text="대기 중" textFill="#c9d6ff">
                                 <font>
                                    <Font name="Arial" size="14.0" />
                                 </font>
                              </Label>
                              <Label fx:id="opponentReadyBadge" text="READY" textFill="white" visible="false"
                                  style="-fx-background-color: #21b573; -fx-background-radius: 12; -fx-padding: 6 14 6 14;">
                                 <font>
                                    <Font name="Arial Black" size="14.0" />
                                 </font>
                              </Label>
                           </children>
                        </VBox>

                        <VBox alignment="CENTER" spacing="12" prefWidth="280">
                           <children>
                              <Label fx:id="roleLabel" text="HOST MODE" textFill="white">
                                 <font>
                                    <Font name="Arial Bold" size="16.0" />
                                 </font>
                              </Label>
                              <Label text="IP ADDRESS" textFill="#c9d6ff">
                                 <font>
                                    <Font name="Arial" size="13.0" />
                                 </font>
                              </Label>
                              <TextField fx:id="ipField" prefWidth="240" prefHeight="38" promptText="192.168.0.10"
                                  style="-fx-background-color: #0b2451; -fx-text-fill: white; -fx-border-color: #274690; -fx-border-radius: 10; -fx-background-radius: 10; -fx-prompt-text-fill: #6f7e9a;">
                                 <font>
                                    <Font name="Consolas" size="14.0" />
                                 </font>
                              </TextField>
                              <Label fx:id="ipHintLabel" text="호스트 IP를 입력해 접속하세요." textFill="#a0b3d9">
                                 <font>
                                    <Font name="Arial" size="12.0" />
                                 </font>
                              </Label>
                              <ComboBox fx:id="gameModeCombo" prefWidth="240" prefHeight="36"
                                  style="-fx-background-color: #0b2451; -fx-text-fill: white; -fx-border-color: #274690; -fx-border-radius: 10; -fx-background-radius: 10; -fx-prompt-text-fill: white;" />
                              <Label fx:id="pingLabel" text="Ping: -- ms" textFill="#c9d6ff">
                                 <font>
                                    <Font name="Consolas" size="12.0" />
                                 </font>
                              </Label>
                           </children>
                        </VBox>

                        <VBox fx:id="selfCard" alignment="CENTER" spacing="10" prefWidth="240" prefHeight="240"
                            style="-fx-background-color: rgba(255,255,255,0.08); -fx-border-color: #3f72af; -fx-border-radius: 14; -fx-background-radius: 14; -fx-padding: 16;">
                           <children>
                              <Label text="나" textFill="white">
                                 <font>
                                    <Font name="Arial Bold" size="18.0" />
                                 </font>
                              </Label>
                              <Label fx:id="selfStatusLabel" text="연결 대기" textFill="#c9d6ff">
                                 <font>
                                    <Font name="Arial" size="14.0" />
                                 </font>
                              </Label>
                              <Label fx:id="selfReadyBadge" text="READY" textFill="white" visible="false"
                                  style="-fx-background-color: #21b573; -fx-background-radius: 12; -fx-padding: 6 14 6 14;">
                                 <font>
                                    <Font name="Arial Black" size="14.0" />
                                 </font>
                              </Label>
                           </children>
                        </VBox>
                     </children>
                  </HBox>

                  <Label fx:id="messageLabel" text="역할을 선택하세요." textFill="#e4e9ff">
                     <font>
                        <Font name="Arial" size="13.0" />
                     </font>
                  </Label>

                  <HBox alignment="CENTER" spacing="12">
                     <children>
                        <Button fx:id="joinButton" text="JOIN" prefWidth="110" prefHeight="40" onAction="#onJoinPressed"
                            style="-fx-background-color: #e94560; -fx-text-fill: white; -fx-background-radius: 10; -fx-font-size: 14;">
                           <effect>
                              <DropShadow color="#00000080" radius="6.0" />
                           </effect>
                        </Button>
                        <Button fx:id="startButton" text="START" prefWidth="110" prefHeight="40" onAction="#onStartPressed"
                            style="-fx-background-color: #3f72af; -fx-text-fill: white; -fx-background-radius: 10; -fx-font-size: 14;">
                           <effect>
                              <DropShadow color="#00000080" radius="6.0" />
                           </effect>
                        </Button>
                        <Button fx:id="readyButton" text="READY" prefWidth="110" prefHeight="40" onAction="#onReadyPressed"
                            style="-fx-background-color: #21b573; -fx-text-fill: white; -fx-background-radius: 10; -fx-font-size: 14;">
                           <effect>
                              <DropShadow color="#00000080" radius="6.0" />
                           </effect>
                        </Button>
                        <Button fx:id="backButton" text="BACK" prefWidth="110" prefHeight="40" onAction="#onBackPressed"
                            style="-fx-background-color: #6c757d; -fx-text-fill: white; -fx-background-radius: 10; -fx-font-size: 14;">
                           <effect>
                              <DropShadow color="#00000080" radius="6.0" />
                           </effect>
                        </Button>
                     </children>
                  </HBox>
               </children>
            </VBox>
         </center>
      </BorderPane>
   </children>
</StackPane>
